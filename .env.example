# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/healthflow
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ============================================================================
# API KEYS
# ============================================================================
# OpenAI for embeddings and chat
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic for entity extraction
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Dedalus Labs for medical AI agents
DEDALUS_API_KEY=...
DEDALUS_BASE_URL=https://api.dedaluslabs.ai/v1

# ============================================================================
# OBJECT STORAGE (S3/MinIO)
# ============================================================================
S3_BUCKET=healthflow-documents
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000  # MinIO local
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# Or use Supabase Storage
USE_SUPABASE_STORAGE=true
SUPABASE_STORAGE_BUCKET=documents

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# CELERY
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=HealthFlow+
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
MAX_UPLOAD_SIZE_MB=50

# ============================================================================
# FRONTEND (Next.js)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_APP_NAME=HealthFlow+
NEXT_PUBLIC_MAX_FILE_SIZE=52428800  # 50MB in bytes

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# EMAIL (Optional - for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@healthflow.example

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_VOICE_LOGS=true
ENABLE_DEDALUS_INTEGRATION=true
ENABLE_DOCUMENT_OCR=true
ENABLE_CHAT=true
ENABLE_ANALYTICS=false

# ============================================================================
# OCR & DOCUMENT PROCESSING
# ============================================================================
# Use Tesseract, AWS Textract, Google Vision, or Azure
OCR_PROVIDER=tesseract  # tesseract, textract, vision, azure
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Google Cloud Vision
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
